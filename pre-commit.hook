#!/bin/bash

set -e

if ! git diff-index --quiet --cached HEAD -- www/style.css.php color-scheme-convert.php; then
	git show :www/style.css.php | (cd www; php -- Mac >style.css)
	git show :www/style.css.php | (cd www; php -- Windows >style.windows.css)
	php color-scheme-convert.php www/style.css 2 >www/style-dark.css
	php color-scheme-convert.php www/style.windows.css 2 >www/style-dark.windows.css
	git add www/style*.css
fi
